#!/bin/sh
VERSION=2.7
ARCH=x86_64
BUILD=6
DISTRO=${DISTRO:-slamd64}

CWD=`pwd`

PKG=/tmp/package-aaa_elflibs32
PKGTMP=/tmp/partial-glibc

rm -rf $PKGTMP
mkdir -p $PKGTMP
cd $PKGTMP

explodepkg $CWD/glibc32-$VERSION-${ARCH}_${DISTRO}-$BUILD.tgz

cd lib
ldconfig -n . # Recreate symlinks

mkdir -p $PKG/lib
cp -a * $PKG/lib
