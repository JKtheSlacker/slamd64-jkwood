PKGNAM=akonadi
VERSION=1.0.0
BUILD=${BUILD:-1}
NUMJOBS=${NUMJOBS:--j6}

# This should really be split out as a separate package
MOC_VERSION=0.9.84

. /etc/pkghelpers
pkghelpers_env

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
tar xvf $CWD/akonadi-$VERSION.tar.bz2
cd akonadi-$VERSION
pkghelpers_permissions

# First, we have to build automoc4, which is required to build akonadi
tar xf $CWD/automoc4-$MOC_VERSION.tar.bz2
cd automoc4-$MOC_VERSION
  cmake \
    -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
    -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
    -DLIB_SUFFIX=$LIBSUFFIX \
    -DCMAKE_INSTALL_PREFIX=/usr .
  make $NUMJOBS || exit 1
  # We'll put that stuff in $PKG
  make install DESTDIR=$PKG
#  mkdir -p $PKG/usr/bin $PKG/usr/lib/automoc4
#  install -m 0755 automoc4 $PKG/usr/bin
#  install -m 0644 Automoc4Config.cmake automoc4.files.in \
#    $PKG/usr/lib/automoc4
  # and now we'll spam the build box, but it won't matter...
  make install
cd -

mkdir -p build
cd build
  cmake \
    -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
    -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DMAN_INSTALL_DIR=/usr/man \
    -DLIB_SUFFIX=$LIBSUFFIX \
    ..
   make $NUMJOBS || exit 1
   make install DESTDIR=$PKG || exit 1
cd -

mkdir -p $PKG/usr/doc/akonadi-$VERSION
cp -a AUTHORS INSTALL README lgpl-license $PKG/usr/doc/akonadi-$VERSION

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
zcat $CWD/doinst.sh.gz > $PKG/install/doinst.sh

cd $PKG
pkghelpers_fixup
pkghelpers_makepkg
