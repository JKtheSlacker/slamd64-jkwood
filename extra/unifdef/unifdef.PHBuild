# Copyright (c) 2006-2007 Fred Emmott <mail@fredemmott.co.uk>
PKGNAM=unifdef
VERSION=${VERSION:-1.0+20030701}
BUILD=${BUILD:-2}

. /etc/pkghelpers
pkghelpers_env

rm -rf $PKG
mkdir -p $PKG

cd /tmp

rm -rf unifdef-$VERSION
tar zxfv $CWD/unifdef-$VERSION.tar.gz
cd unifdef-$VERSION

./configure --prefix=/usr
make -j 12
make install DESTDIR=$PKG

cd $PKG
mkdir install
cat $CWD/slack-desc > install/slack-desc
pkghelpers_fixup
pkghelpers_makepkg
